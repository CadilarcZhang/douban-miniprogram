page {
  background-color: #b3d4db;
  height: 100%;
}
.container, .avatar {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 200rpx;
  height: 200rpx;
  margin:20rpx;
  border-radius: 100rpx;
}

.userInfo-nickname {
  color: #405f80;
  font-size: 32rpx;
  margin-top:  32rpx;
}

.avatar {
  margin: 200rpx 0;
}

.user-name {
  margin-bottom: 100rpx;
  font-size: 16px;
  font-weight: bold;
}

.motto-container {
  width: 300rpx;
  height: 80rpx;
  border: 1px solid #405f80;
  border-radius: 5px;
  font-size: 12px;
  font-weight: bold;
  text-align: center;
  line-height: 80rpx;
}

.index-hover {
  background-color: "#405f80";
  color: "#fff"
}

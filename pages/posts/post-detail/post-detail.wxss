.detail-container {
  display: flex;
  flex-direction: column;
}
.detail-image {
  width: 100%;
  height: 460rpx;
}
.audio-image {
  width: 100rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -50rpx;
  top: 180rpx;
  opacity: 0.6;
}
.auther-date {
  flex-direction: row;
  margin: 20rpx 0 10rpx 20rpx;
  /* margin-left: 20rpx; */
}
.avatar {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  /* margin-left: 20rpx; */
  margin-right: 20rpx;
}
.author {
  font-size: 30rpx;
  margin: 0 20rpx;
  vertical-align: middle;
}
.publish {
  font-size: 24rpx;
  font-weight: bold;
  vertical-align: middle;
}
.date {
  font-size: 24rpx;
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
}
.title {
  font-size: 35rpx;
  font-weight: 700;
  margin-bottom: 10px;
  margin-left: 30rpx;
  margin-top: 30rpx;
  letter-spacing: 4rpx;
  color: #4b556c;
}
.tool {
  margin-top: 20rpx;
}
.share-collection{
  flex-direction: row;
  line-height: 16px;
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
  /* margin-left: 10px; */
}
.separate-line {
  width: 660rpx;
  height: 1px;
  /* border: 1px solid #e5e5e5; */
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}
.collection, .share {
  float: right;
  width: 90rpx;
  height: 90rpx;
  margin-right: 8px;
  vertical-align: middle;
}
.share {
  margin-left: 30rpx;
}
.detail-content {
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  margin: 20rpx 30rpx 50rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  text-indent: 2em;
}
.share-btn {
  width:210rpx;
  /* margin-right: 0; */
  font-size:28rpx;
  letter-spacing:2rpx;
  position:absolute;
  right:0;
  bottom:0;
}